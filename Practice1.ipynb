def calc_entropy3(c1,c2,c3):
    total = c1+c2+c3
    p1 = c1 / total
    p2 = c2 / total
    p3 = c3 / total
    
    entropy = -(p1*np.log2(p1) + p2*np.log2(p2) + p3*np.log2(p3))
    return entropy


